{
    "$schema": "http://json-schema.org/draft-07/schema",
    "properties": {
        "providers": {
            "$ref": "#/definitions/providers",
            "additionalProperties": false
        },
        "detail": {
            "type": "object"
        },
        "name": {
            "type": "string"
        },
        "regions": {
            "$ref": "#/definitions/regionRef",
            "additionalProperties": false
        }
    },
    "definitions": {
        "provider": {
            "anyOf": [{
                "type": "string"
            }, {
                "type": "object",
                "patternProperties": {
                    ".+": {
                        "type": "string"
                    }
                }
            }]
        },
        "providers": {
            "type": "object",
            "properties": {
                "neuroglancer/precomputed": {
                    "$ref": "#/definitions/provider"
                },
                "neuroglancer/precompmesh": {
                    "$ref": "#/definitions/provider"
                },
                "neuroglancer/precompmesh/surface": {
                    "$ref": "#/definitions/provider",
                    "pattern": "^.+\\s[0-9]+$"
                },
                "nii": {
                    "$ref": "#/definitions/provider"
                },
                "zip/nii": {
                    "$ref": "#/definitions/provider",
                    "pattern": "^.+\\s.+$"
                },
                "gii-label": {
                    "$ref": "#/definitions/provider"
                },
                "gii-mesh": {
                    "$ref": "#/definitions/provider"
                }
            }
        },
        "regionRef": {
            "type": "object",
            "properties": {
                "parcellation": {
                    "$ref": "/config_schema/at_id.json"
                },
                "regions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "@type",
        "providers"
    ]
}
